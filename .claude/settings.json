{
  "permissions": {
    "allow": [
      "Bash(gh pr:*)",
      "Bash(cmd.exe /c \"where gh\")",
      "Bash(cmd.exe /c \"where gh 2>&1\")",
      "Bash(powershell.exe -Command \"Get-Command gh -ErrorAction SilentlyContinue | Select-Object -ExpandProperty Source\")",
      "Bash(powershell.exe -Command \"winget list --name ''GitHub CLI'' 2>&1 | head -5\")",
      "Bash(git config --global credential.helper)",
      "Bash(git config credential.helper)",
      "Bash(git config --list)",
      "Bash(powershell.exe -Command \"[System.Security.Cryptography.ProtectedData]; Add-Type -AssemblyName System.Security; $creds = [System.Net.CredentialCache]::DefaultNetworkCredentials; echo ''ok''\")",
      "Bash(powershell.exe -Command \":*)",
      "Bash(git credential fill)",
      "Read(//tmp/**)",
      "Bash(git checkout main)",
      "Bash(git pull origin main)",
      "Bash(git stash)",
      "Bash(git stash pop)",
      "WebFetch(domain:chatgpt.com)"
    ],
    "additionalDirectories": [
      "\\tmp"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/notify.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/notify.sh"
          }
        ]
      }
    ]
  },
  "autoApprove": {
    "enabled": true,
    "tools": [
      "Read",
      "Write",
      "Edit",
      "Bash",
      "Glob",
      "Grep"
    ],
    "paths": [
      "autoload/**",
      "resources/**",
      "scenes/**",
      "scripts/**",
      "assets/**",
      ".steering/**",
      "docs/**"
    ],
    "exclude": [
      ".git/**",
      ".godot/**",
      "build/**"
    ]
  },
  "git": {
    "autoCommit": false,
    "commitMessageFormat": "[type] brief description\n\nðŸ¤– Generated with [Claude Code](https://claude.com/claude-code)\n\nCo-Authored-By: Claude <noreply@anthropic.com>"
  },
  "godot": {
    "version": "4.3",
    "autoloadLimit": 3,
    "enforceTypeAnnotations": true,
    "sceneFormat": "tscn"
  }
}
